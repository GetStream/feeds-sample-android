<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_get_or_create_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get or create user" />

    <Button
        android:id="@+id/btn_create_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create activity" />

    <Button
        android:id="@+id/btn_delete_all_activities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete all activities" />

    <Button
        android:id="@+id/btn_get_all_activities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Get all activities" />

    <TextView
        android:id="@+id/text_activities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="16sp" />

</LinearLayout>